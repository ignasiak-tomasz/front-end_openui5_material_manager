<mvc:View
	controllerName="opensap.myapp.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
		<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{dokumenty>ktoWystawil/imie}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<!-- <f:Avatar
								src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"
								displaySize="S"
								displayShape="Square"
								class="sapUiTinyMarginEnd"/> -->
							<m:Title text="{dokumenty>ktoWystawil/imie}" wrapping="true"/>
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>
				<actions>
					<m:ToggleButton
						text="Edytuj"
						type="Emphasized"
						press=".onEditToggleButtonPress"/>
					<m:Button
						text="Usuń"
						type="Transparent"/>
					<m:Button
						text="Kopiuj"
						type="Transparent"/>
					<m:Button
						icon="sap-icon://action"
						text="Udostępnij"
						type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<!--src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}"--><f:Avatar
					displaySize="L"
					displayShape="Square"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Kategoria Główna"/>
					<m:Text text="{dokumenty>ktoWystawil/imie}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Podkategoria"/>
					<m:Text text="{dokumenty>ktoWystawil/imie}"/>
				</m:VBox>
				<!-- <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Price"/>
					<!- <m:ObjectNumber number="{products>CurrencyCode} {products>Price}" emphasized="false"/> ->
				</m:VBox> -->
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection title="Informator"><!--TODO do wprowadzenia w i18n--> <!--To jest cały blok, który pojawia się w nagłówku strony-->
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Referencja"/><!--TODO do wprowadzenia w i18n--> <!--Tutaj końcowo pojawią się informacje w osobnych akapitach. Lekcja 13 już je ma-->
									<m:Text text="{dokumenty>ktoWystawil/imie}"/>
									<m:Label text="Opis"/><!--TODO do wprowadzenia w i18n--> <!--Tutaj końcowo pojawią się informacje w osobnych akapitach. Lekcja 13 już je ma-->
									<m:Text text="{dokumenty>ktoWystawil/imie}"/>
									<m:Label text="Dostawca"/><!--TODO do wprowadzenia w i18n--> <!--Tutaj końcowo pojawią się informacje w osobnych akapitach. Lekcja 13 już je ma-->
									<m:Text text="{dokumenty>ktoWystawil/imie}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Lista dostawców"><!--TODO do wprowadzenia w i18n--> <!--To jest cały blok, który pojawia się w nagłówku strony-->
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="suppliersTable"
								items="{path : 'dokumenty>produkty'}">
								<m:columns>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onProductPress">
										<m:cells>
											<m:ObjectIdentifier text="{dokumenty>produktId}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Zapisz"/>
				<m:Button type="Reject" text="Anuluj"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>